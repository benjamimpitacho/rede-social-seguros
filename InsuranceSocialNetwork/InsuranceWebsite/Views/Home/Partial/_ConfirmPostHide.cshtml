@using InsuranceWebsite.Models
@using MVCGrid.Web
@model HomeViewModel

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<div id="dialog-confirm-delete" style="width: auto; min-height: 0px; max-height: none; text-align:center;" class="">
    <p style="padding:10px 0px;">
        <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
        @Resources.Resources.AreYouSureToHidePost
    </p>
</div>
<div class="" style="text-align:center;">
    <div class="ui-dialog-buttonset">
        <button type="button" class="ui-button ui-corner-all ui-widget" id="okButton">@Resources.Resources.Ok</button>
        <button type="button" class="ui-button ui-corner-all ui-widget" id="cancelButton">@Resources.Resources.Cancel</button>
    </div>
</div>

<script type="text/javascript">

    $(function () {

        $("#cancelButton").on("click", function (e) {
            $("#dialog-confirm-hide").dialog("close");
        });

        $("#okButton").on("click", function (e) {
            $(this).load("@Url.Action("HidePost", "Home")" + "/" + @ViewBag.postId);
            $("#dialog-confirm-hide").dialog("close");
        });

    });

</script>

