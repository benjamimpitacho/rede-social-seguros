                        <div class="time">@Math.Round(DateTime.Now.Subtract(message.CreateDate).TotalSeconds, 0) @Resources.Resources.SecondsAgo</div>
                    }
                    else if (DateTime.Now.Subtract(message.CreateDate).TotalHours < 1)
