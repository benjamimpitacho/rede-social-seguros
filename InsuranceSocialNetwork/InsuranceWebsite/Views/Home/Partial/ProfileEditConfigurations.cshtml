                <label class="form-control label-control profile-label" style="max-width:36px;">@Html.CheckBoxFor(i => i.ProfileEditModel.ProfileSettings.ReceiveNotificationsByEmail, new { style = "margin:-5px;" })<span class="checkmark"></span></label>
            </p>
        </div>

        <p></p>
        <div class="action-buttons" style="display:block; text-align:center;">
            @Html.ActionLink(Resources.Resources.Cancel, "ProfileConfigurations", new { userId = Model.Profile.ID_User }, new { @class = "btn btn-darkblue" })
            <input type="submit" class="btn btn-blue" value="@Resources.Resources.Save" />
        </div>
    }
    </div>
</div>


