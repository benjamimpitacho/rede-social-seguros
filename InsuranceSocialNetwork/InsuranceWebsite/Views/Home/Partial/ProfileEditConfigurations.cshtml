            <span style="font-size:14px;">@Resources.Resources.ChangePassword</span>
        </div>
        <div>
            <p class="data-row">
                <span class="data-name profile-label" style="width:36em;">@Resources.Resources.OldPassword</span>
                <label class="form-control label-control profile-label">@Html.PasswordFor(i => i.ProfileEditModel.ProfileSettings.OldPassword)</label>
            </p>
        </div>
        <div>
            <p class="data-row">
                <span class="data-name profile-label" style="width:36em;">@Resources.Resources.NewPassword</span>
                <label class="form-control label-control profile-label">@Html.PasswordFor(i => i.ProfileEditModel.ProfileSettings.NewPassword)</label>
            </p>
        </div>
        <div>
            <p class="data-row">
                <span class="data-name profile-label" style="width:36em;">@Resources.Resources.RepeatPassword</span>
                <label class="form-control label-control profile-label">@Html.PasswordFor(i => i.ProfileEditModel.ProfileSettings.RepeatPassword)</label>
            </p>
        </div>
        <div>
            @Html.ValidationMessageFor(i => i.ProfileEditModel.ProfileSettings.OldPassword)
            @Html.ValidationMessageFor(i => i.ProfileEditModel.ProfileSettings.NewPassword)
            @Html.ValidationMessageFor(i => i.ProfileEditModel.ProfileSettings.RepeatPassword)
        </div>

        <p></p>
        <div class="action-buttons" style="display:block; text-align:center;">
            @Html.ActionLink(Resources.Resources.Cancel, "ProfileConfigurations", new { userId = Model.Profile.ID_User }, new { @class = "btn btn-darkblue" })
            <input type="submit" class="btn btn-blue" value="@Resources.Resources.ChangePassword" />
        </div>
    }
    @using (Html.BeginForm("ProfileSaveConfigurations", "Home", FormMethod.Post, new { @class = "", enctype = "multipart/form-data", id = "profileInformationForm" }))
    {
        @Html.HiddenFor(i => i.ProfileEditModel.ID)
        <div style="padding:10px 0px;">
            <span style="font-size:14px;">@Resources.Resources.Privacy</span>
        </div>
        <div>
            <p class="data-row">
