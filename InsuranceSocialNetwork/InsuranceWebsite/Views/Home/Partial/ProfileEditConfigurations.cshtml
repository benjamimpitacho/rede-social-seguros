                <label class="form-control label-control profile-label" style="max-width:36px;">@Html.CheckBoxFor(i => i.ProfileEditModel.ProfileSettings.ShowDisplayName, new { style = "margin:-5px;" })<span class="checkmark"></span></label>
            </p>
        </div>
        <div>
            <p class="data-row">
                <span class="data-name profile-label" style="width:36em;max-width:20em;">@Resources.Resources.ShowBirthDate</span>
                <label class="form-control label-control profile-label" style="max-width:36px;">@Html.CheckBoxFor(i => i.ProfileEditModel.ProfileSettings.ShowBirthDate, new { style = "margin:-5px;" })<span class="checkmark"></span></label>
            </p>
        </div>
        <div>
            <p class="data-row">
                <span class="data-name profile-label" style="width:36em;max-width:20em;">@Resources.Resources.ShowContactInformation</span>
                <label class="form-control label-control profile-label" style="max-width:36px;">@Html.CheckBoxFor(i => i.ProfileEditModel.ProfileSettings.ShowContactInformation, new { style = "margin:-5px;" })<span class="checkmark"></span></label>
            </p>
        </div>
        <div>
            <p class="data-row">
                <span class="data-name profile-label" style="width:36em;max-width:20em;">@Resources.Resources.ShowSocialNetworks</span>
                <label class="form-control label-control profile-label" style="max-width:36px;">@Html.CheckBoxFor(i => i.ProfileEditModel.ProfileSettings.ShowSocialNetworks, new { style = "margin:-5px;" })<span class="checkmark"></span></label>
            </p>
        </div>
        <div style="padding:10px 0px;">
            <span style="font-size:14px;">@Resources.Resources.Notifications</span>
        </div>
        <div>
            <p class="data-row">
                <span class="data-name profile-label" style="width:36em;max-width:20em;">@Resources.Resources.LikesOnYourPosts</span>
                <label class="form-control label-control profile-label" style="max-width:36px;">@Html.CheckBoxFor(i => i.ProfileEditModel.ProfileSettings.LikesOnYourPosts, new { style = "margin:-5px;" })<span class="checkmark"></span></label>
            </p>
        </div>
        <div>
            <p class="data-row">
                <span class="data-name profile-label" style="width:36em;max-width:20em;">@Resources.Resources.CommentsOnYourPosts</span>
                <label class="form-control label-control profile-label" style="max-width:36px;">@Html.CheckBoxFor(i => i.ProfileEditModel.ProfileSettings.CommentsOnYourPosts, new { style = "margin:-5px;" })<span class="checkmark"></span></label>
