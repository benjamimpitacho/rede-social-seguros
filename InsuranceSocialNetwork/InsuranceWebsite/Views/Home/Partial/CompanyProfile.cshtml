        </div>
        <div>
            <p>
                @Html.ValidationMessageFor(i => i.CompanyModel.ContactEmail)
            </p><p>
                @Html.ValidationMessageFor(i => i.CompanyModel.Telephone_1)
            </p><p>
                @Html.ValidationMessageFor(i => i.CompanyModel.Telephone_2)
            </p><p>
