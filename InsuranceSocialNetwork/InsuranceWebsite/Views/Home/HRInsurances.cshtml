                                                    <div style="padding:10px;">
                                                        @*<a href="@post.RepostPost.URL" target="_blank">*@
                                                        <div style="border: 1px #ccc solid;">
                                                            @if (!string.IsNullOrEmpty(post.RepostPost.ImageSource))
                                                            {
                                                                <div>
                                                                    <div>
                                                                        <div style="text-align:center;"><img src="@post.RepostPost.ImageSource" class="image" alt="image post"></div>
                                                                    </div>
                                                                </div>
                                                            }
                                                            @if (!string.IsNullOrEmpty(post.RepostPost.URL_Title) || !string.IsNullOrEmpty(post.RepostPost.URL_Description) || !string.IsNullOrEmpty(post.RepostPost.URL_Domain))
                                                            {
                                                                <div style="border-top: 1px #ccc solid;padding: 10px;">
                                                                    <div style="font-weight: bold;font-size: 16px;color:#333;">@post.RepostPost.URL_Title</div>
                                                                    <div style="font-size: 12px;">@post.RepostPost.URL_Description</div>
                                                                    <div>
                                                                        <div>
                                                                            <div style="color: #6F7D85;">@post.RepostPost.URL_Domain</div>
                                                                            <div class=""></div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            }
                                                        </div>
                                                        @*</a>*@
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </a>
                                }

                                @if (post.PostType.Token == InsuranceSocialNetworkCore.Enums.PostTypeEnum.IMAGE_POST.ToString())
                                {

                                    <div class="post-image">

                                        @*<img src="@post.ImageSource" class="image show-in-modal" alt="image post">*@

