                                {
                                    <a href="@Url.Action("PostDetail", "Home", new { idPost = post.RepostPost.ID})">
                                        <div class="panel panel-white post panel-shadow" style="border: 1px #ccc solid;">

                                            <div class="post-heading">

                                                <div class="pull-left image" style="padding:5px">
                                                    @*<a href="@Url.Action("ProfileInfo", "Home", new { id = post.PostOwner.ID })">*@
                                                    @if (null != post.RepostPost.PostOwner.ProfilePhoto && post.RepostPost.PostOwner.ProfilePhoto.Length > 0)
                                                    {
                                                        <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(post.RepostPost.PostOwner.ProfilePhoto))" class="avatar" alt="user profile image">
                                                    }
                                                    else
                                                    {
                                                        <img src="~/Content/images/no_photo_img.jpg" class="avatar" alt="user profile image">
                                                    }
                                                    @*</a>*@
                                                </div>

                                                <div class="pull-left meta" style="margin-bottom: 0px;">

                                                    <div class="h5" style="font-weight: bold;">

                                                        @*<a href="@Url.Action("ProfileInfo", "Home", new { id = post.RepostPost.PostOwner.ID })" class="post-user-name">*@@post.RepostPost.PostOwner.FirstName@*</a>*@

                                                    </div>

                                                    @if (post.RepostPost.PostSubject.Token == InsuranceSocialNetworkCore.Enums.PostSubjectEnum.SPONSORED_POST.ToString())
                                                    {
                                                        <h6 class="text-muted time">@Resources.Resources.Sponsored.ToUpper()</h6>
                                                    }
                                                    else
                                                    {
                                                        if (DateTime.Now.Subtract(post.RepostPost.CreateDate).TotalMinutes < 1)
                                                        {
                                                            <h6 class="text-muted time">@Math.Round(DateTime.Now.Subtract(post.RepostPost.CreateDate).TotalSeconds, 0) @Resources.Resources.SecondsAgo</h6>
                                                        }
                                                        else if (DateTime.Now.Subtract(post.RepostPost.CreateDate).TotalHours < 2)
                                                        {
                                                            <h6 class="text-muted time">@Math.Round(DateTime.Now.Subtract(post.RepostPost.CreateDate).TotalMinutes, 0) @Resources.Resources.MinutesAgo</h6>
                                                        }
                                                        else if (DateTime.Now.Subtract(post.RepostPost.CreateDate).TotalDays < 1)
                                                        {
                                                            <h6 class="text-muted time">@Math.Round(DateTime.Now.Subtract(post.RepostPost.CreateDate).TotalHours, 0) @Resources.Resources.HoursAgo</h6>
                                                        }
                                                        else if (DateTime.Now.Subtract(post.RepostPost.CreateDate).TotalDays == 1)
                                                        {
                                                            <h6 class="text-muted time">@Math.Round(DateTime.Now.Subtract(post.RepostPost.CreateDate).TotalDays, 0) @Resources.Resources.DayAgo</h6>
                                                        }
                                                        else if (DateTime.Now.Subtract(post.RepostPost.CreateDate).TotalDays < 3)
                                                        {
                                                            <h6 class="text-muted time">@Math.Round(DateTime.Now.Subtract(post.RepostPost.CreateDate).TotalDays, 0) @Resources.Resources.DaysAgo</h6>
                                                        }
                                                        else
                                                        {
                                                            <h6 class="text-muted time">@post.RepostPost.CreateDate.ToShortDateString()</h6>
                                                        }
                                                    }

                                                </div>

                                                @*<div class="pull-right">
                                                        <i class="glyphicon glyphicon-option-vertical icon context-menu-one" id="menu_@post.RepostPost.ID" style="border:0px;font-size: 24px;margin-right: 10px;"></i>
                                                    </div>*@

                                            </div>

                                            <div class="post-description" style="word-break:normal; text-align:justify;">

                                                @if (post.RepostPost.PostType.Token == InsuranceSocialNetworkCore.Enums.PostTypeEnum.FILE_POST.ToString())
                                                {
                                                    @*<a id="file_@post.RepostPost.ID" href="@Url.Action("Download", "Home", new { id = post.RepostPost.ID })">*@<i class="fa fa-file-text-o" aria-hidden="true" style="font-size:30px;padding-left: 15px;padding-right:10px;"></i>@*</a>*@
                                                }
                                                <span id="text_@post.RepostPost.ID">@post.RepostPost.Text</span>

                                            </div>

                                            @if (post.RepostPost.PostType.Token == InsuranceSocialNetworkCore.Enums.PostTypeEnum.IMAGE_POST.ToString())
                                            {

                                                <div class="post-image">

                                                    @*<img src="@post.RepostPost.ImageSource" class="image show-in-modal" alt="image post">*@

                                                    <div id="gallery_@post.RepostPost.ID" class="image show-in-modal"></div>

                                                    <script>

                        $(function () {

