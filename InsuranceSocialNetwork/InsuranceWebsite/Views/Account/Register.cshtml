@using InsuranceWebsite.Models
@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<!-- register and login form-->

<div class="welcome-inputs">

    <div class="widget panel-inputs panel-home animated fadeInUp">

        <div class="widget-body">

            <div class="row" style="margin-left: 15px;padding-top:0px">

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <img src="~/Content/logos/logotipo_falar_seguros.png" style="padding: 30px 50px;" />
                    </div>

                    <div class="form-group">
                        @*@Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })*@
                        <div class="col-md-12">
                            <span class="glyphicon glyphicon-user"></span>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = Resources.Resources.Name, @id = "short" })
                        </div>
                    </div>
                    <div class="form-group">
                        @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })*@
                        <div class="col-md-12">
                            <span class="glyphicon glyphicon-envelope"></span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = Resources.Resources.Email, @id = "short" })
                        </div>
                    </div>
                    <div class="form-group">
                        @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
                        <div class="col-md-12">
                            <span class="glyphicon glyphicon-lock"></span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = Resources.Resources.Password, @id = "short" })
                        </div>
                    </div>
                    <div class="form-group">
                        @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })*@
                        <div class="col-md-12">
                            <span class="glyphicon glyphicon-lock"></span>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = Resources.Resources.ConfirmPassword, @id = "short" })
                            
                        </div>
                    </div>
                    <div class="form-group">
                        @*@Html.LabelFor(m => m.UserRole, new { @class = "col-md-2 control-label" })*@
                        <div class="col-md-12">
                            <span class="glyphicon glyphicon-lock"></span>
                            @Html.DropDownListFor(m => m.UserRole, Model.UserRoles, new { @class = "form-control", id = "userRoleDropdown" })
                            @*@Html.DropDownList("UserRole", (SelectList)ViewBag.Name, null, new { @class = "form-control", id="userRoleDropdown" })*@
                        </div>
                    </div>
                    <div class="form-group" id="professionalNumberSection">
                        @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })*@
                        <div class="col-md-12">
                            <span class="glyphicon glyphicon-envelope"></span>
                            @Html.TextBoxFor(m => m.ProfessionalNumber, new { @class = "form-control", @placeholder = Resources.Resources.ProfessionalNumber, @id = "short" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10" style="margin-left: 0px; padding-left: 70px;">
                            @Html.ActionLink(Resources.Resources.Login.ToUpper(), "Login", "Account", new { @class = "" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10" style="margin-left: 0px">
                            <input type="submit" class="btn btn-info" value="@Resources.Resources.Regist" />
                        </div>
                    </div>
                }

            </div>

        </div>

    </div>

</div><!-- end register and login form -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    $(".btn-panel-home").click(function () {
        $(".panel-home").toggleClass("hidden");
        $(".panel-home").toggleClass("animated");
        $(".panel-home").toggleClass("fadeInUp");
    });

    $("#professionalNumberSection").hide();

    $("#userRoleDropdown").change(function () {
        if($("#userRoleDropdown").val() == 3)
        {
            $("#professionalNumberSection").show();
        }
        else
        {
            $("#professionalNumberSection").hide();
        }
    });

</script>

<style type="text/css">

.form-group {
    margin-bottom: 10px;
}
    
.glyphicon {
    /*color: #00C1DE;
    border-color: #00C1DE;*/
    border-style: solid;
    border-width: medium;
    width: 40px;
    height: 40px;
    padding: 8px;
    border-radius: 32px;
    font-size: 20px;
    color: darkgrey;
}
</style>
