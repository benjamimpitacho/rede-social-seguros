@using InsuranceWebsite.Models
@model InsuranceWebsite.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset your password?";
}

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<!-- register and login form-->

<div class="welcome-inputs">

    <div class="widget panel-inputs panel-home animated fadeInUp">

        <div class="widget-body">

            <div class="row" style="margin-left: 15px; padding-top:0px;">

                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)

                    <div class="form-group" style="margin-bottom: 35px !important;">
                        <img src="~/Content/logos/logotipo_falar_seguros.png" style="padding: 30px 50px;" />
                    </div>

                    <div class="form-group login-box">
                        <h6 style="font-weight:bold;">@Resources.Resources.EnterYourEmailAndNewPasswordToReset</h6>
                    </div>

                    @*<hr />*@

                    <div class="form-group login-box">
                        <div class="col-md-12 login-box-elements light">
                            <img src="~/Content/icons/envelope.png" style="width:40px; height:40px;" />
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control login-box-input", @placeholder = Resources.Resources.Email, @id = "short" })
                        </div>
                    </div>

                    <div class="form-group login-box">
                        <div class="col-md-12 login-box-elements dark">
                            <img src="~/Content/icons/locker.png" style="width:40px; height:40px;" />
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control login-box-input", @placeholder = Resources.Resources.Password, @id = "short" })
                        </div>
                    </div>

                    <div class="form-group login-box">
                        <div class="col-md-12 login-box-elements dark">
                            <img src="~/Content/icons/locker.png" style="width:40px; height:40px;" />
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control login-box-input", @placeholder = Resources.Resources.ConfirmPassword, @id = "short" })
                        </div>
                    </div>

                    <div class="form-group login-box" style="text-align: center;">
                        <input type="submit" value="@Resources.Resources.Reset" style="margin-top:0px" class="btn btn-info login-button" />
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                        </div>
                    </div>
                }

            </div>

        </div>

    </div>

</div><!-- end register and login form -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    $(".btn-panel-home").click(function () {
        $(".panel-home").toggleClass("hidden");
        $(".panel-home").toggleClass("animated");
        $(".panel-home").toggleClass("fadeInUp");
    });
</script>
