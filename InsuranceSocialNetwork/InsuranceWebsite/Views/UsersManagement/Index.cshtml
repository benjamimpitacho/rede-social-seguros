<script>
    
    $("#jsGrid").jsGrid({
        width: "100%",
        height: "400px",

        filtering: true,
        inserting: true,
        editing: true,
        sorting: true,
        paging: true,
        autoload: true,

        pageSize: 15,
        pageButtonCount: 5,

        deleteConfirm: "Do you really want to delete the user?",

        controller: {
            loadData: function (filter) {
                return $.ajax({
                    type: "GET",
                    url: "/usersmanagement/get",
                    data: "",
                    dataType: "json"
                });
            },

            insertItem: function (item) {
                return $.ajax({
                    type: "POST",
                    url: "/api/data",
                    data: item,
                    dataType: "json"
                });
            },

            updateItem: function (item) {
                return $.ajax({
                    type: "PUT",
                    url: "/api/data/" + item.ID,
                    data: item,
                    dataType: "json"
                });
            },

            deleteItem: function (item) {
                return $.ajax({
                    type: "DELETE",
                    url: "/api/data/" + item.ID,
                    dataType: "json"
                });
            }
        },

        fields: [
            { name: "FirstName", type: "text", width: 150, validate: "required" },
            { name: "CreateDate", type: "date", width: 50, formatter: "date", formoptions: { rowpos: 3, colpos: 1 }, formatoptions: { srcformat: "ISO8601Long", newformat: "m/d/Y h:i A" } },
            { name: "Active", type: "checkbox", title: "Active", sorting: false },
            { type: "control" }
        ]
    });
</script>